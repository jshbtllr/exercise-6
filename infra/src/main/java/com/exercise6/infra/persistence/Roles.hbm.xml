<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.exercise6.core.model.Roles" table="ROLES">
		<meta attribute="class-description">
			Class-Table mapping contains all Role details.
		</meta>
		<id name="roleId" type="int" column="RoleID">
			<generator class="increment"/>
		</id>
		<property name="roleCode" column="RoleCode" type="string"/>
		<property name="roleName" column="RoleName" type="string"/>
	</class>
</hibernate-mapping>